{
  "manifest_version": 3,
  "name": "Threads Bullshit Blocker",
  "version": "1.1.0",
  "description": "Detects and flags Frankfurt-style bullshit posts on Threads.",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bullshit Blocker Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.threads.net/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "bs_dictionary.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}
